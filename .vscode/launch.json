    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch SceneGate (GTK)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Cake: Run Build",
            "program": "${workspaceFolder}/src/SceneGate.UI.Gtk/bin/Debug/net6.0/SceneGate.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}