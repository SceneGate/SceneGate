<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Description>API for UI components of SceneGate.</Description>

    <!-- Bug in code analyzer with records -->
    <NoWarn>AD0001</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../docs/images/logo_128.png" Pack="true" PackagePath="$(PackageIcon)" Visible="false" />
    <None Include="../../README.md" Pack="true" PackagePath="$(PackageReadmeFile)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Yarhl" />
    <PackageReference Include="Yarhl.Media.Text" />

    <PackageReference Include="Eto.Forms" />
    <PackageReference Include="Microsoft.Toolkit.Mvvm" />
    <PackageReference Include="YamlDotNet" />
  </ItemGroup>

</Project>
